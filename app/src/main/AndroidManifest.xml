        <activity
            android:name=".ExploreActivity"
            android:exported="false"
            android:label="@string/title_activity_explore"
            android:theme="@style/Theme.Lagat" />
        <activity
            android:name=".DestinationActivity"
            android:exported="false"
            android:label="@string/title_activity_destination"
            android:theme="@style/Theme.Lagat" />
        <activity
            android:name=".FormActivity"
            android:exported="false"
            android:label="@string/title_activity_form"
            android:theme="@style/Theme.Lagat" />
        <activity
            android:name=".IntentActivity"
            android:exported="false"
            android:label="@string/title_activity_intent"
            android:theme="@style/Theme.Lagat" />
        <activity
            android:name=".layoutactivity"
            android:exported="false"
            android:label="@string/title_activity_layoutactivity"
            android:theme="@style/Theme.Lagat" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Lagat" />
    </application>

</manifest>